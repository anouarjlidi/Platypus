{% trans_default_domain 'Installer' %}

{% extends 'Default/template.html.twig' %}

{% set fullPage = false %}


{% block menuContainer %}{% endblock menuContainer %}
{% block title %}Busybee Installer{% endblock title %}
{% block headerTitle %}{{ 'installation.step'|trans({'%{step}': (manager.step + 1)}) }}{% endblock headerTitle %}
{% block sectionMenu %}
    {% include 'Installer/welcome.html.twig' %}
{% endblock sectionMenu %}

{% block contentContainer %}
    {% set h3Content = miscButton({title: 'home', transDomain: 'System', class: 'btn btn-success fas fa-home', windowOpen: {route: path('home')}}) %}
    {% set h3Content = h3Content ~ miscButton({title: 'database.demo_data.label', transDomain: 'Installer', class: 'btn btn-primary fas fa-database', windowOpen: {route: path('load_demonstration_data', {section: 'Start'})}}) %}
    {% include 'Default/panelStart.html.twig' with {panelStyle: 'default', header: 'installer.completed', transDomain: 'Installer'} %}
    {% include 'Default/messages.html.twig' with {messages: manager.messageManager.addStatusMessages(manager.status, 'Installer')} %}
    {% include 'Default/panelEnd.html.twig' %}
{% endblock contentContainer %}
