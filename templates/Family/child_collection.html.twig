    <div class="row row-striped small">
        <div class="col-10 card">
            <div class="row">
                <div class="col-12">
                    {{ form_widget(form.person, {value: transformData(form.person)}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 card">
                    {{ form_row(form.comment) }}
                </div>
            </div>
        </div>
        <div class="col-2 card collection-actions">

        </div>
    </div>
{% endblock family_child_widget %}