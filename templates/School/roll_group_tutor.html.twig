{% block roll_group_tutors_errors %}{% endblock %}

{% block roll_group_tutors_widget %}
    {% spaceless %}
        {% set h3Content = '<div class="collection-actions">' %}
        {% set h3Content = h3Content ~ saveButton({mergeClass: 'btn-sm'}) %}
        {% set h3Content = h3Content ~ '</div>' %}
        <div class="row">
            <div class="col-8 card">{{ form_widget(form, {value: transformData(form)}) }}</div>
            <div class="col-4 card">{{ h3Content|raw }}</div>
        </div>
    {% endspaceless %}
{% endblock roll_group_tutors_widget %}
