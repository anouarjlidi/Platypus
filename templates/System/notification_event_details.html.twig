{% trans_default_domain 'System' %}

{% include 'Default/panelStart.html.twig' with {header: 'notification.event.header', name: tabManager.entity.event, transDomain: 'System'} %}
<div class="row">
    <div class="col-5 card">
        <div class="form-group">
            {{ form_widget(form.module) }}<span class="font-weight-bold">{{ form.vars.value.module.name }}</span><br/>
            <label class="form-control-label required" for="school_year_name">{{ form.module.vars.label|trans }}</label>
            <span class="field-required">&nbsp;Required </span>&nbsp;
            <small class="form-text text-muted">{{ form.module.vars.help|trans }}</small>
        </div>

    </div>
    <div class="col-5 card">
        <div class="form-group">
            {{ form_widget(form.action) }}<span class="font-weight-bold">{{ form.vars.value.action.name }}</span><br/>
            <label class="form-control-label required" for="school_year_name">{{ form.action.vars.label|trans }}</label>
            <span class="field-required">&nbsp;Required </span>&nbsp;
            <small class="form-text text-muted">{{ form.action.vars.help|trans }}</small>
        </div>
    </div>
    <div class="col-2 card">
        {{ form_row(form.active) }}
    </div>
</div>
{% include 'Default/panelEnd.html.twig' %}