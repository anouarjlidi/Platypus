{% extends "Default/template.html.twig" %}

{% trans_default_domain 'System' %}

{% form_theme form
    "Setting/file_extension.html.twig"
    "@HillrangeForm/FormTheme/jquery.collection.html.twig"
    "@HillrangeForm/FormTheme/bootstrap.html.twig"
%}

{% block title %}{{ parent() }} {{ 'School Admin'|trans({}, 'System') }}{% endblock title %}
{% block headerTitle %}{{ 'file_extension_header'|trans }}{% endblock headerTitle %}
{% block headerLead %}{% endblock headerLead %}

{% block contentContainer %}
    {{ all_form_errors(fullForm, "div", "alert alert-danger alert-dismissable show hide") }}
    {{ form_start(form) }}
        {% include '@HillrangeForm/Script/collection_message.html.twig' %}
        {% include 'Default/panelStart.html.twig' with {header: 'file_extension_header', transDomain: 'System', colour: 'light'} %}
    <div class="row row-header">
        <div class="col-2 card text-center">
            {{ 'file_extension.extension.label'|trans }}
        </div>
        <div class="col-4 card text-center">
            {{ 'file_extension.name.label'|trans }}
        </div>
        <div class="col-3 card text-center">
            {{ 'file_extension.type.label'|trans }}
        </div>
        <div class="col-3 card text-center">
            {{ 'actions'|trans }}
        </div>
    </div>
        {{ collection_widget(form.fileExtensions, 0, 0) }}
        {% include 'Default/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
    {{ parent() }}
    {{ collections_manage(form, ['fileExtensions'])|raw }}
    {{ collection_script(form.fileExtensions)|raw }}
{% endblock javascripts %}
