{% set containerThemeOverwrite = '' %}
{% set headerNotices = '' %}
{% spaceless %}
{% if app.user is defined and app.user is not null %}
    {% set route = getParameter('security.routes')['security_user_edit'] %}
    {% if getUserSetting('Calendar') is not null %}
        {% set headerNotices = headerNotices ~ miscButton({transDomain: 'SchoolYear', style: 'float: left;', title: 'user.school_yesr.warning', class: 'btn btn-warning btn-header', prompt: {message: 'user.school_year.name', 'params': {'%{name}': getCurrentSchoolYearName() }}, windowOpen: {route: path(route, {id: app.user.id})}}) %}
        {% set containerThemeOverwrite = ' containerWarning' %}
    {% else %}
        {% set headerNotices = headerNotices ~ miscButton({transDomain: 'SchoolYear', style: 'float: left;', title: 'user.school_year.current', class: 'btn btn-success btn-header', prompt: {message: 'user.school_year.name', params: {'%{name}': getCurrentSchoolYearName() }}, windowOpen: {route: path(route, {id: app.user.id})}}) %}
    {% endif %}
{% endif %}
{% endspaceless %}
{% block htmlContent %}
{% endblock htmlContent %}
